.\" ----------------------------------------------------------------------
.\" p.tmac: presentation macros
.\" Author: Rob Bocchino
.\" ----------------------------------------------------------------------
.\" depend on ms
.mso ms.tmac 
.\" ----------------------------------------------------------------------
.\" ST: Slide Title
.\" ---------------------------------------------------------------------- 
.de ST
.  nr VS 12
.  nr PS 10
.  LP
.  DS L
.  FA 36
.  gcolor \\*[titlecolor]
.  B "\\$1"
.  gcolor black
.  DE
.  sp 1v
\l'\\n[LL]u'
.  sp 1v
.  BZ
..
.\" ----------------------------------------------------------------------
.\" FA: Font size Absolute
.\" ---------------------------------------------------------------------- 
.de FA
.  ps \\$1
.  vs \\$1+2
..
.\" ----------------------------------------------------------------------
.\" FD: Font size Delta
.\" ---------------------------------------------------------------------- 
.de FD
.  ps \\$1
.  vs \\$1
..
.\" ----------------------------------------------------------------------
.\" MP: Marked Paragraph
.\" ---------------------------------------------------------------------- 
.de MP
.  IP "\\h'\\n[MI]u-\\w'\\$1'u'\\$1"
..
.\" ----------------------------------------------------------------------
.\" BP: Bullet point
.\" ---------------------------------------------------------------------- 
.de BP 
.  sp \\$1
.  MP \s[\\$2]\\$3
.  FA \\$2
..
.\" ----------------------------------------------------------------------
.\" L1: Bullet level 1
.\" ---------------------------------------------------------------------- 
.de L1
.  ie \\n[.$]=0 .BP 0.2i 24 \[bu]
.  el           .BP 0.2i 24 \\$1
..
.\" ----------------------------------------------------------------------
.\" L2: Bullet level 2
.\" ---------------------------------------------------------------------- 
.de L2
.  ie \\n[.$]=0 .BP 0.1i 20 \-
.  el           .BP 0.1i 20 \\$1
..
.\" ----------------------------------------------------------------------
.\" L3: Bullet level 3
.\" ---------------------------------------------------------------------- 
.de L3
.  ie \\n[.$]=0 .BP 0.05i 18 \[bu]
.  el           .BP 0.05i 18 \\$1
..
.\" ----------------------------------------------------------------------
.\" JM: Jump to mark
.\" ---------------------------------------------------------------------- 
.de JM
'  fi
.  mk \\$1j
.  sp |\\n[\\$1y]u
\\h'|\\n[\\$1x]u'\\h'-\\w' 'u'
.  if \\n(.$>1 \\v'\\$2'
.  if \\n(.$>2 \\h'\\$3'
..
.\" ----------------------------------------------------------------------
.\" JA: Jump above line at mark
.\" ---------------------------------------------------------------------- 
.de JA
.  JM \\$1 -0.75v \\$2
..
.\" ----------------------------------------------------------------------
.\" JB: Jump below line at mark
.\" ---------------------------------------------------------------------- 
.de JB
.  JM \\$1 0.25v \\$2
..
.\" ----------------------------------------------------------------------
.\" RM: Return from Mark
.\" ---------------------------------------------------------------------- 
.de RM
.  sp |\\n[\\$1j]u
..
.\" ----------------------------------------------------------------------
.\" LN: Draw line
.\" ---------------------------------------------------------------------- 
.de LN
\\$4\\D'l \\$1 \\$2'\\$3
..
.\" ----------------------------------------------------------------------
.\" BS: Box Start
.\" ---------------------------------------------------------------------- 
.de BS 
.  nr mp_LL \\n[LL]
.  nr mp_PO \\n[PO]
.  nr PO \\$1
.  po \\$1
.  nr LL \\$1+\\$3
.  ll \\$1+\\$3
.  LP
.  sp |\\n[mp_bm]u
.  sp \\$2
..
.\" ----------------------------------------------------------------------
.\" BE: Box End
.\" ---------------------------------------------------------------------- 
.de BE
.  nr PO \\n[mp_PO]u
.  po \\n[mp_PO]u
.  nr LL \\n[mp_LL]u
.  ll \\n[mp_LL]u
..
.\" ----------------------------------------------------------------------
.\" BZ: Box Zero
.\" ---------------------------------------------------------------------- 
.de BZ
.  mk mp_bm
..
.\" ----------------------------------------------------------------------
.\" MR: Mark Right
.\" ---------------------------------------------------------------------- 
.de MR
\\v'|\\$1'\\h'|\\$2-\\w'\\$3'u'\\$3\\h'|0.5i'
..
.\" ----------------------------------------------------------------------
.\" SN: Slide Number
.\" ---------------------------------------------------------------------- 
.de SN
.  LP
.  FA 18
.  MR 8.5i-\\n[HM]u-\\n[FM]u \\n[LL]u \\$1
..
.\" ---------------------------------------------------------------------- 
.\" groff/MS parameters
.\" ---------------------------------------------------------------------- 
.fam H
.nr HM 0.5i
.nr FM 0.5i
.nr PI 0.75i
.nr PO 0.5i
.nr LL 10i
.\" suppress page number
.ds CH "
.\" ---------------------------------------------------------------------- 
.\" p.tmac parameters
.\" ---------------------------------------------------------------------- 
.nr MI 0.5i
.ds titlecolor black
